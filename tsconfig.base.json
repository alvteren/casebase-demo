{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@casebase-demo/ui-components": ["libs/ui-components/src/index.ts"],
      "@casebase-demo/api-services": ["libs/api-services/src/index.ts"],
      "@casebase-demo/utils": ["libs/utils/src/index.ts"],
      "@casebase-demo/shared-types": ["libs/shared-types/src/index.ts"],
      "@casebase-demo/feature-components": [
        "libs/feature-components/src/index.ts"
      ]
    }
  },
  "include": ["env.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
